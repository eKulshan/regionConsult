extends ../layouts/application.pug

block header
  = t('views.users.edit.edit')

block content
  h3= 'Изменнить данные'
  form(action=`/users/${id}` method='post' id='form1')
    +input(user, t('views.users.new.email'), 'email', errors)(type="text" form='form1')
    input(name="_method" type="hidden" value="patch" form='form1')
    .form-group
      input(class='btn btn-primary' type='submit' value=t('views.users.edit.submit') form='form1')
  
  h3= 'Изменнить пароль'
  form(action=`/users/${id}/password` method='post' id='form2')
    +passwordInput(user, t('views.users.new.password'), 'password', errors)(type="password" form='form2')
    input(name="_method" type="hidden" value="patch" form='form2')
    .form-group
      input(class='btn btn-primary' type='submit' value=t('views.users.edit.submit') form='form2')