extends ../layouts/application.pug

block header
  = t('views.session.new.signIn')

block content
  +formFor()(action=route('session') method='post')
    +input(signInForm, t('views.session.new.email'), 'email', errors)(type="text")
    +passwordInput(signInForm, t('views.session.new.password'), 'password')(type="password")
    +submit(signInForm)(value=t('views.session.new.submit'))
